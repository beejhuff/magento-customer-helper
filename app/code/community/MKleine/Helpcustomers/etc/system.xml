<?xml version="1.0"?>

<config>
    <sections>
        <customer>
            <groups>
                <helpcustomers translate="label">
                    <label>Help Customers Extension</label>
                    <sort_order>50</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <logon_fail_active translate="label comment">
                            <label>Logon Fail active</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Will send emails to customers when they fail to login</comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logon_fail_active>
                        <logon_fail_email_template translate="label">
                            <label>Logon Fail Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logon_fail_email_template>

                        <stocknotification_active translate="label comment">
                            <label>Stocknotification active</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Allows customers to register for products which are not in stock</comment>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </stocknotification_active>
                        <stocknotification_email_template translate="label">
                            <label>Stocknotification Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </stocknotification_email_template>
                    </fields>
                </helpcustomers>
            </groups>
        </customer>
    </sections>
</config>
