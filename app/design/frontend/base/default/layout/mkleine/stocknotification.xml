<?xml version="1.0"?>
<layout version="0.1.0">
    <catalog_product_view>
        <reference name="product.info.extrahint">
            <block type="mk_helpcustomers/stocknotification_link"
                   name="mkleine.helpcustomers.stocknotification.link"
                   template="mkleine/helpcustomers/stocknotification/link.phtml" />
        </reference>
    </catalog_product_view>

    <helpcustomers_stocknotification_add>
        <reference name="content">
            <block type="mk_helpcustomers/stocknotification_add"
                   name="mkleine.helpcustomers.stocknotification.add"
                   template="mkleine/helpcustomers/stocknotification/add.phtml"/>
        </reference>
    </helpcustomers_stocknotification_add>

    <helpcustomers_stocknotification_remove>
        <reference name="content">
            <block type="mk_helpcustomers/stocknotification_remove"
                   name="mkleine.helpcustomers.stocknotification.remove"
                   template="mkleine/helpcustomers/stocknotification/remove.phtml"/>
        </reference>
    </helpcustomers_stocknotification_remove>

    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="mk_helpcustomers"><name>stocknotification</name><path>helpcustomers/stocknotification/manage</path><label>Stock Notifications</label></action>
        </reference>
    </customer_account>

    <helpcustomers_stocknotification_manage translate="label">
        <label>Stock Notifications</label>
        <update handle="customer_account"/>
        <reference name="my.account.wrapper">
            <block type="mk_helpcustomers/stocknotification_manage" name="customer_stocknotifications" />
            <block type="customer/account_dashboard" name="customer.account.link.back" template="customer/account/link/back.phtml"/>
        </reference>
    </helpcustomers_stocknotification_manage>
</layout>