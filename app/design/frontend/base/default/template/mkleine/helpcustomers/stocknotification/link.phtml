                <span>
                    <span><?php echo $this->__('Inform me by mail if the product is in stock again'); ?></span>
                </span>
            </button>
        <?php else : ?>
            <button type="button" title="<?php echo $this->__('Remove mail subscription about stock changes'); ?>" class="button btn-notification" onclick="location.href='<?php echo $this->getUrl('helpcustomers/stocknotification/remove', array( 'id' => $product->getId() )) ?>'">
                <span>
                    <span><?php echo $this->__('Remove mail subscription about stock changes'); ?></span>
                </span>
            </button>
        <?php endif; ?>
        </div>
