{
    "name": "mkleine/magento-customer-helper",
    "license": "OSL-3.0",
    "type": "magento-module",
    "description": "Sends an email after a given time range to customers which failed to login",
    "homepage": "http://mkleine.de/projekte-und-referenzen/magento/",
    "authors": [
        {
            "name": "Matthias Kleine",
            "email": "dev@mkleine.de",
            "homepage": "http://mkleine.de",
            "role": "Developer"
        }
    ],
    "keywords": [
        "magento",
        "extension",
        "module"
    ],
    "require": {
        "php": ">=5.3.0",
        "magento-hackathon/magento-composer-installer": "dev-master",
        "magento-hackathon/magento-behat-extension": "dev-master"
    },
    "require-dev": {
        "ivanchepurnyi/ecomdev_phpunit": "dev-dev",
        "ecomdev/mage-ci": "dev-master"
    },
    "config": {
        "bin-dir": "bin"
    },
    "repositories":[
        {
            "url": "https://github.com/EcomDev/EcomDev_PHPUnit",
            "type": "git"
        },
        {
            "type": "composer",
            "url": "http://packages.firegento.com"
        }
    ],
    "extra":{
        "magento-root-dir": "test/"
    }
}